<%
  # Default values
  required = local_assigns.fetch(:required, true)
  value = local_assigns[:value]
  hint = local_assigns[:hint]
  prepend_html = local_assigns[:prepend_html]
%>

<div>
  <label for="<%= id %>" class="block text-sm font-medium text-gray-700 mb-2">
    <%= label %>
    <% if hint %>
      <span class="text-xs text-gray-500"><%= hint %></span>
    <% end %>
  </label>
  <%= raw prepend_html if prepend_html %>
  <input
    type="number"
    id="<%= id %>"
    name="<%= id %>"
    step="<%= step %>"
    min="0"
    class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
    placeholder="<%= placeholder %>"
    <%= "required" if required %>
    <%= "value=\"#{value}\"" if value %>
  >
</div>
